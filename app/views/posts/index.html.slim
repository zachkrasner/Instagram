-@posts.reverse.each do |post|
  div.row
    div.col-xs-12.col-sm-6.col-sm-offset-3
      div.thumbnail
        div.caption
          h6.pull-left Zach Krasner
          h6.pull-right= post.created_at.to_time.strftime('%B %e at %l:%M %p')
        = link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post)
        div.caption
          p= post.caption
